module default {
  # Custom permission for application access
  # Assigned to: app_user
  permission app_access;

  # Custom permission to bypass access policies
  # SECURITY WARNING: Only assign to trusted roles!
  # Assigned to: app_admin, app_migration
  # NEVER assign to: app_user, app_worker, app_readonly
  # Use cases:
  #   - Admin dashboards (app_admin)
  #   - Migrations and data seeding (app_migration)
  #   - Emergency debugging (app_admin)
  permission policy_bypass;
}
